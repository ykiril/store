%h3.page-header= t('checkout.order_summury')
%table.table
  %tbody
    %tr
      %td= t('checkout.item_total')
      %td= number_to_currency(order_in_progress.subtotal)
    - if order_in_progress.shipment
      %tr
        %td= t('checkout.ship_price')
        %td= number_to_currency(order_in_progress.shipment_total)
    - if order_in_progress.coupon
      %tr
        %td= t('checkout.order_discount')
        %td= number_to_currency(order_in_progress.discount)
    %tr
      %td= t('checkout.order_total')
      %td= number_to_currency(order_in_progress.total)
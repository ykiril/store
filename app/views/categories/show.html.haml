- content_for(:breadcrumbs) do
  %ol.breadcrumb
    %li
      = link_to 'Home', root_path
    %li
      = link_to 'Shop', books_path
    %li.active
      = @category.name
      
.row
  .col-md-9
    %h1= @category.name
    = render partial: 'books/book', collection: @books
    = paginate @books
  .col-md-3
    = render 'category_list'      
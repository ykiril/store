.row
  .col-md-6
    = form_for(@user, url: { action: :update }) do |f|
      %h3.page-header= t('user.settings.billing_address')

      = error_messages_for(@user.billing_address)
      = f.fields_for :billing_address do |bill_form|
        = render('address/form', f: bill_form)
      = f.submit t('user.settings.save'), class: "btn btn-primary"

  .col-md-6
    = form_for(@user, url: { action: :update }) do |f|
      %h3.page-header= t('user.settings.shipping_address')

      = error_messages_for(@user.shipping_address)
      = f.fields_for :shipping_address do |bill_form|
        = render('address/form', f: bill_form)
      = f.submit t('user.settings.save'), class: "btn btn-primary"
.row
  .col-md-6
    = form_for(@user, url: { action: :update }) do |f|
      %h3.page-header= t('user.settings.email')

      = error_messages_for(@user, 'email')
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control'
      = f.submit t('user.settings.save'), class: "btn btn-primary"

  .col-md-6
    = form_for(@user, url: { action: :update_password }) do |f|
      %h3.page-header= t('user.settings.password')

      = error_messages_for(@user, 'password')
      .form-group
        = f.label :password
        = f.password_field :password, :autocomplete => 'off', class: 'form-control'
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: 'form-control'
      - if f.object.encrypted_password.present?
        .form-group
          = f.label :current_password
          = f.password_field :current_password, class: 'form-control'
      = f.submit t('user.settings.save'), class: "btn btn-primary"
.row
  .col-md-6
    %h3.page-header= t('user.settings.remove_account') 
    = button_to(t('user.settings.cancel_account'), registration_path(@user), 
              class: 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete)
